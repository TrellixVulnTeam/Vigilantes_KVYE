<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recognizeActivity">

    <Button
        android:id="@+id/carThree"
        android:layout_width="195dp"
        android:layout_height="116dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="380dp"
        android:text="Select Car 3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_directions_car_120" />

    <Button
        android:id="@+id/carTwo"
        android:layout_width="195dp"
        android:layout_height="116dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="208dp"
        android:text="Select Car 2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_directions_car_120" />

    <Button
        android:id="@+id/carOne"
        android:layout_width="195dp"
        android:layout_height="116dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:text="Select Car 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_directions_car_120" />

    <TextView
        android:id="@+id/predictionOne"
        android:layout_width="124dp"
        android:layout_height="90dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="40dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/predictionTwo"
        android:layout_width="124dp"
        android:layout_height="90dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="40dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/predictionThree"
        android:layout_width="124dp"
        android:layout_height="90dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="40dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>